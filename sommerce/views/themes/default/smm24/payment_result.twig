<div class="container min-height__result">
	<div class="row">
		{% if payment_result.completed %}
          <div class="alert-card col-md-offset-2 col-md-8">
              <div class="panel">
                  <div class="panel-body">
                      <div class="alert-icon__block">
                          <div class="alert-icon"><span class="fa fa-check"></span></div>
                      </div>
                      <div class="panel-body__content">
                          <div class="panel-body__content-title">{{ lang('payment_result.completed.title') }}</div>
                          <div class="panel-body__content-message">
                            <!-- Alert Start -->
                            <div class="checkout--info pbottom--30 {% if site.rtl %} rtl-direction {% endif %}">
                                <div class="title">
                                    <p><i class="fa fa-info-circle"></i> {{ lang('payment_result.completed.description') }}</p>
                                </div>
                            </div>
                            <!-- Alert End -->
                          </div>
                          <div class="panel-body__content-id">#{{ payment_result.id }}</div>
                      </div>
                  </div>
              </div>
          </div>
      {% endif %}

      {% if payment_result.failed %}
          <div class="alert-card col-md-offset-2 col-md-8">
              <div class="panel">
                  <div class="panel-body">
                      <div class="alert-icon__block">
                          <div class="alert-icon"><span class="fa fa-times"></span></div>
                      </div>
                      <div class="panel-body__content">
                          <div class="panel-body__content-title">{{ lang('payment_result.failed.title') }}</div>
                          <div class="panel-body__content-message">
                            <!-- Alert Start -->
                            <div class="checkout--info checkout--info-error pbottom--30 {% if site.rtl %} rtl-direction {% endif %}">
                                <div class="title">
                                    <p><i class="fa fa-info-circle"></i> {{ lang('payment_result.failed.description') }}</p>
                                </div>
                            </div>
                            <!-- Alert End -->
                          </div>
                          <div class="panel-body__content-id">#{{ payment_result.id }}</div>
                      </div>
                  </div>
              </div>
          </div>
      {% endif %}

      {% if payment_result.awaiting %}
          <div class="alert-card col-md-offset-2 col-md-8">
              <div class="panel">
                  <div class="panel-body">
                      <div class="alert-icon__block">
                          <div class="alert-icon"><span class="fa fa-clock"></span></div>
                      </div>
                      <div class="panel-body__content">
                          <div class="panel-body__content-title">{{ lang('payment_result.awaiting.title') }}</div>
                          <div class="panel-body__content-message">
                            <!-- Alert Start -->
                            <div class="checkout--info pbottom--30 {% if site.rtl %} rtl-direction {% endif %}">
                                <div class="title">
                                    <p><i class="fa fa-info-circle"></i> {{ lang('payment_result.awaiting.description') }}</p>
                                </div>
                            </div>
                            <!-- Alert End -->
                          </div>
                          <div class="panel-body__content-id">#{{ payment_result.id }}</div>
                      </div>
                  </div>
              </div>
          </div>
      {% endif %}
	</div>
</div>