{% if block.process %}
    <!-- Process block Start -->
    <section class="border-bottom">
        <div class="container">
            <div class="row section-header">
                <div class="col-lg-12">
                    <h2 class="text-center">{{ block.process.header.title }}</h2>
                    {% if block.process.header.description %}
                        <div class="section-description">
                            {{ block.process.header.description }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="row section-content">
                {% for process in block.process.data %}
                    <div class="{{ block.process.settings.bootstrap_column }}">
                        <div class="process">
                            <div class="process-body">
                                <div class="icon">
                                    {% if block.process.settings.picture_type == 'image' %}
                                        <img src="{{ process.image }}" alt="" class="img-responsive">
                                    {% else %}
                                        <div class="process-icon text-center">
                                            <span class="{{ process.icon_class }}" style="font-size: {{ block.process.settings.icon_size }}px;"></span>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="title text-center">
                                    <h3 class="process-title">{{ process.title }}</h3>
                                </div>
                                {% if block.process.settings.description %}
                                    <div class="description text-center">
                                        <div class="process-text">
                                            {{ process.description }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Process block End -->
{% endif %}