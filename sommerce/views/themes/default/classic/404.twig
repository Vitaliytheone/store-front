<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ site.page_title }}</title>
	{% if site.favicon %}
      <link rel="shortcut icon" type="image/ico" href="{{ site.favicon }}" />
	{% endif %}
    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom styles -->
    <link rel="stylesheet" href="{{ asset('/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/classic.css') }}">
</head>
<body>
<section class="min-height">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template text-center">
                    <h1>{{ lang('404.title') }}</h1>
                    <div class="error-details">
                        {{ lang('404.description') }}
                    </div>
                    <div class="panel-body text-center">
                        <a href="/" class="btn btn-default">{{ lang('404.button.home_page') }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
</html>