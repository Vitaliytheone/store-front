<section class="min-height">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-title {% if site.rtl %} rtl-content {% endif %}">{{ page.title }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="contactUs-form {% if site.rtl %} rtl-content {% endif %}">
                    <form action="" method="post">
                        {% if error %}
                            <div class="error-summary alert alert-danger">{{ error_message }}</div>
                        {% endif %}
                        {% if success %}
                            <div class="alert alert-success">{{ lang('contact.form.message.success') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="inputSubject">{{ lang('contact.subject') }}</label>
                            <input type="text" class="form-control" id="inputSubject" name="subject" value="{{ contact.form.subject }}">
                        </div>
                        <div class="form-group">
                            <label for="inputName">{{ lang('contact.name') }}</label>
                            <input type="text" class="form-control" id="inputName" name="name" value="{{ contact.form.name }}">
                        </div>
                        <div class="form-group">
                            <label for="inputEmail">{{ lang('contact.email') }}</label>
                            <input type="email" class="form-control" id="inputEmail" name="email" value="{{ contact.form.email }}">
                        </div>
                        <div class="form-group">
                            <label for="inputMessage">{{ lang('contact.message') }}</label>
                            <textarea class="form-control" id="inputMessage" rows="3" name="message">{{ contact.form.message }}</textarea>
                        </div>
                        <div class="form-group">
                            <div class="g-recaptcha" data-sitekey="{{ captcha_key }}"></div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">{{ lang('contact.button.submit') }}</button>
                        </div>
                        <input type="hidden" name="{{ csrfname }}" value="{{ csrftoken }}">
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                {% if page.content %}
                    <div class="contactUs-description {% if site.rtl %} rtl-content {% endif %}">
                        {{ page.content }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>