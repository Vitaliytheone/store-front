<section class="min-height">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="page-title">{{ lang('vieworder.title', {'id': vieworder.id}) }}</h2>
            </div>
            <div class="col-md-6">
                <div class="order-result__customer">
                    {{ vieworder.customer_email }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="cart bg-white table-responsive">
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>{{ lang('vieworder.package') }}</th>
                            <th>{{ lang('vieworder.details') }}</th>
                            <th>{{ lang('vieworder.quantity') }}</th>
                            <th class="col-lg-1">{{ lang('vieworder.price') }}</th>
                            <th>{{ lang('vieworder.status') }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in vieworder.orders %}
                            <tr>
                                <td>
                                    {{ item.name }}
                                </td>
                                <td>
                                    {{ item.link }}
                                </td>
                                <td>
                                    {{ item.quantity }}
                                </td>
                                <td>
                                    {{ item.price|money }}
                                </td>
                                <td>
                                    {{ item.status }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>