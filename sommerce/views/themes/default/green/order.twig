<!-- Page Header Section Start -->
<div id="pageHeader" class="pd--80-0" data-bg-img="/img/themes/green/header-bg.jpg">
    <div class="container">
        <!-- Page Header Title Start -->
        <div class="page-header--title pull-left">
            <h1 class="h1">{{ lang('order.title') }}</h1>
        </div>
        <!-- Page Header Title End -->

    </div>
</div>
<!-- Page Header Section End -->

<!-- Order Section Start -->
<div id="checkout" class="pd--100-0-40 min-height">
    <div class="container">

        <!-- Checkout Form Start -->
        <div class="checkout--form" data-form-validation="true">
            <form id="addToCardForm" class="form" action="" method="post">
                <div class="row pt--80">
                    <div class="checkout--order-info col-md-6">
                        <h2 class="checkout--form-title h4">{{ lang('order.title') }}</h2>

                        <table class="table table-bordered">
                            <tbody>
                            <tr>
                                <td>{{ lang('order.package') }}</td>
                                <td>{{ order.quantity }} {{ order.name }}</td>
                            </tr>
                            <tr>
                                <td>{{ lang('order.price') }}</td>
                                <td>{{ order.price|money }}</td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                    <div class="checkout--billing-info col-md-6">
                        <h2 class="checkout--form-title h4">{{ lang('order.details') }}</h2>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>
                                        <span>{{ lang('order.link') }} <em>*</em></span>
                                        <input type="text" name="AddToCartForm[link]" class="form-control" value="{{ order.form.link }}" required>
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <a href="{{ order.back_url }}" class="btn btn-default">{{ lang('order.button.back_url') }}</a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" id="addToCartButton" name="add-to-cart-button" class="btn btn-default pull-right">{{ lang('order.button.add_to_cart') }}</button>
                    </div>
                    <input type="hidden" name="{{ csrfname }}" value="{{ csrftoken }}">
                </div>
            </form>
        </div>
        <!-- Checkout Form End -->
    </div>
</div>
<!-- Order Section End -->