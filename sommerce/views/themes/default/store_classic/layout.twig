<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ site.page_title }}</title>
    <meta name="keywords" content="{{ site.meta.keywords }}">
    <meta name="description" content="{{ site.meta.description }}">
    {% if site['favicon'] %}
        <link rel="shortcut icon" type="image/ico" href="{{ site['favicon'] }}" />
    {% endif %}
    <!-- CDN Font Awesome -->
    <link rel="stylesheet" href="/css/frontend/fontawesome.css">
    <!-- Styles -->
    <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('/css/slick.css') }}" rel="stylesheet">
    <link href="{{ asset('/css/style.css') }}" rel="stylesheet">
    {{ site.custom_header }}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>


<div class="header">
    <div class="header-navbar">
        <div class="container">
            <nav class="navbar {% if site.rtl %} navbar-rtl {% endif %}">

                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                        {% if site.logo %}
                            <a href="/" class="navbar-brand__image">
                                <img src="{{ site.logo }}" alt="{{ site.store_name }}">
                            </a>
                        {% else %}
                            <a href="/" class="navbar-brand">
                                {{ site.store_name }}
                            </a>
                        {% endif %}
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-collapse" data-nav="priority">
                    <ul class="nav navbar-nav">
                        {% for menu_first_level in site.menu %}
                            {% if menu_first_level.submenu %}
                                <li class="dropdown {% if menu_first_level.active %}active{% endif %}">
                                    <a href="#" class="dropdown-toggle" type="button" data-toggle="dropdown">{{ menu_first_level.name }} <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        {% for menu_second_level in menu_first_level.submenu %}
                                            {% if menu_second_level.submenu %}
                                                <li class="dropdown-submenu">
                                                    <a href="#" class="dropdown-toggle" type="button" data-toggle="dropdown">{{ menu_second_level.name }}</a>
                                                    <ul class="dropdown-menu">
                                                        {% for menu_third_level in menu_second_level.submenu %}
                                                            <li>
                                                                <a href="{{ menu_third_level.link }}">{{ menu_third_level.name }}</a>
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                </li>
                                            {% else %}
                                                <li>
                                                    <a href="{{ menu_second_level.link }}">{{ menu_second_level.name }}</a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% else %}
                                <li class="{% if menu_first_level.active %}active{% endif %}">
                                    <a href="{{ menu_first_level.link }}">{{ menu_first_level.name }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/cart"><span class="fal fa-shopping-cart"></span><span class="navbar-cart-badge">{{ site.cart.item_count }}</span> Cart</a>
                        </li>
                    </ul>
                </div>

            </nav>
        </div>
    </div>

    <!-- Slider Start -->
    {% include 'slider.twig' %}
</div>

<main>
    {{ content }}
</main>

<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="footer-copyright {% if site.rtl %} rtl-direction {% endif %}">
                    &copy; {{ site.store_name }} {{ "now"|date("Y") }}
                </div>
            </div>
            <div class="col-md-9">
                <div class="footer-menu {% if site.rtl %} rtl-direction {% endif %}">
                    <ul>
                        <li>
                            <a href="{{ page_url(3) }}">{{ lang('footer.policy') }}</a>
                        </li>
                        <li>
                            <a href="{{ page_url(2) }}">{{ lang('footer.terms') }}</a>
                        </li>
                        <li>
                            <a href="{{ page_url(1) }}">{{ lang('footer.contact') }}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- CDN Scripts -->
<script src="https://www.google.com/recaptcha/api.js?hl={{ site.language }}"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="{{ asset('/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('/js/slick.min.js') }}"></script>
<script src="{{ asset('/js/main.js') }}"></script>
{{ site.custom_footer }}
</body>
</html>