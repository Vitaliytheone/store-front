<!-- Page Header Section Start -->
<div class="page-header--section bg--color-theme pd--80-0">
    <div class="container">
        <div class="title">
            <h1 class="h1">{{ lang('vieworder.title', {'id': vieworder.id}) }}</h1>
            <div class="page-header--customer-email">{{ vieworder.customer_email }}</div>
        </div>
    </div>
</div>
<!-- Page Header Section End -->

<!-- Vieworder Section Start -->
<div class="cart--section pd--100-0">
    <div class="container">
        <!-- Vieworder Items Start -->
        <div class="cart--items pbottom--30">
            <form action="#" method="post">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>{{ lang('vieworder.package') }}</th>
                        <th>{{ lang('vieworder.details') }}</th>
                        <th>{{ lang('vieworder.quantity') }}</th>
                        <th>{{ lang('vieworder.price') }}</th>
                        <th>{{ lang('vieworder.status') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in vieworder.orders %}
                        <tr>
                            <td data-title="{{ lang('vieworder.package') }}">{{ item.name }}</td>
                            <td data-title="{{ lang('vieworder.details') }}">{{ item.link }}</td>
                            <td data-title="{{ lang('vieworder.quantity') }}">{{ item.quantity }}</td>
                            <td data-title="{{ lang('vieworder.price') }}">{{ item.price|money }}</td>
                            <td data-title="{{ lang('vieworder.status') }}">{{ item.status }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </form>
        </div>
        <!-- Vieworder Items End -->


    </div>
</div>
<!-- Vieworder Section End -->