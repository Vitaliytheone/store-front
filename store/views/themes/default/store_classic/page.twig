<div class="content-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="product-page__title {% if site.rtl %} rtl-direction {% endif %}">{{ page.title }}</h1>
                {% if page.content %}
                    <div class="product-page__content {% if site.rtl %} rtl-direction {% endif %}">
                        {{ page.content }}
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
</div>