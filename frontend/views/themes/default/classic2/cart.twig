    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-title">{{ lang('cart.title') }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="cart bg-white table-responsive">
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ lang('cart.package') }}</th>
                            <th>{{ lang('cart.details') }}</th>
                            <th class="col-lg-1">{{ lang('cart.price') }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for order in cart.orders %}
                        <tr>
                            <td>
                                {{ order.id}}
                            </td>
                            <td>
                                {{ order.quantity }} {{ order.name }}
                            </td>
                            <td>
                                {{ order.link }}
                            </td>
                            <td>
                                {{ order.price }}
                            </td>
                            <td class="text-right">
                                <a href="/delete/{{ order.id }}" class="btn btn-xs btn-default">
                                    {{ lang('cart.remove') }}
                                </a>
                            </td>
                        </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-offset-8 col-lg-4">
                <div class="cart bg-white cart-total">
                    <strong>{{ lang('cart.total_price') }} </strong><div class="cart-total__price pull-right">{{ cart.total_price }}</div>
                </div>
            </div>
        </div>

        <form id="orderForm" class="form" method="POST" action="/cart">
            <div class="row">
                <div class="col-lg-offset-8 col-lg-4">
                    <div class="cart bg-white">

                        {% if error %}
                            <div class="error-summary alert alert-danger">{{ error_message }}</div>
                        {% endif %}

                        {% if cart.payments|length > 1 %}
                            <div class="form-group">
                                <label>{{ lang('cart.paymeny_method') }}</label>
                                <div>
                                    {% for payment in cart.payments %}
                                        <label class="radio-inline">
                                            {% if cart.form.selected_method %}
                                                <input type="radio" name="OrderForm[method]" id="inlineRadio{{ payment.id }}" {% if cart.form.selected_method == payment.id %} checked {% endif %} value="{{ payment.id }}"> {{ payment.method }}
                                            {% else %}
                                                <input type="radio" name="OrderForm[method]" id="inlineRadio{{ payment.id }}" {% if loop.first %} checked {% endif %} value="{{ payment.id }}"> {{ payment.method }}
                                            {% endif %}
                                        </label>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label class="control-label" for="orderform-email">{{ lang('cart.email') }}</label>
                            <input type="email" id="orderform-email" class="form-control" name="OrderForm[email]" value="{{ cart.form.email }}" placeholder="mail@gmail.com">
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <a href="/" class="btn btn-default">{{ lang('cart.button.continue') }}</a>
                </div>
                <div class="col-lg-6 text-right">
                    <button type="submit" id="orderButton" class="btn btn-primary" name="order-button">{{ lang('cart.button.checkout') }}</button>
                </div>
            </div>

            <input type="hidden" name="{{ csrfname }}" value="{{ csrftoken }}">
        </form>
    </div>
</section>