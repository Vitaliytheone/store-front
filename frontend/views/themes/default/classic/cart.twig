<section class="min-height">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-title">{{ lang('cart.title') }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="cart bg-white table-responsive">
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ lang('cart.package') }}</th>
                            <th>{{ lang('cart.details') }}</th>
                            <th class="col-lg-1">{{ lang('cart.price') }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                                {% for key,item in items %}
                                <tr>
                                    <td>
                                        {{ (key + 1) }}
                                    </td>
                                    <td>
                                        {{ item['package_name'] }}
                                    </td>
                                    <td>
                                        {{ item['link'] }}
                                    </td>
                                    <td>
                                        {{ item['price'] }}
                                    </td>
                                    <td class="text-right">
                                        <a href="/cart/remove/{{ item['key'] }}" class="btn btn-xs btn-default">
                                            {{ lang('cart.remove') }}
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-offset-8 col-lg-4">
                <div class="cart bg-white cart-total">
                    <strong>{{ lang('cart.total_price') }} </strong><div class="cart-total__price pull-right">{{ total }}</div>
                </div>
            </div>
        </div>

        <form id="orderForm" class="form" method="POST" action="/cart">
            <div class="row">
                <div class="col-lg-offset-8 col-lg-4">
                    <div class="cart bg-white">

                        {% if error %}
                            <div class="error-summary alert alert-danger">{{ errorText }}</div>
                        {% endif %}

                        {% if methods|length > 1 %}
                            <div class="form-group">
                                <label>{{ lang('cart.payment_method') }}</label>
                                <div>
                                    {% for methodId,methodName in methods %}
                                        <label class="radio-inline">
                                            {% if selectedMethodId %}
                                                <input type="radio" name="OrderForm[method]" id="inlineRadio1" {% if selectedMethodId == methodId %} checked {% endif %} value="{{ methodId }}"> {{ methodName }}
                                            {% else %}
                                                <input type="radio" name="OrderForm[method]" id="inlineRadio1" {% if loop.first %} checked {% endif %} value="{{ methodId }}"> {{ methodName }}
                                            {% endif %}
                                        </label>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label class="control-label" for="orderform-email">{{ lang('cart.email_title') }}</label>
                            <input id="orderform-email" class="form-control" name="OrderForm[email]" value="{{ data['email'] }}" placeholder="mail@gmail.com" aria-required="true" aria-invalid="true" type="text">
                        </div>

                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-lg-6">
                    <a href="/" class="btn btn-default">{{ lang('cart.cancel') }}</a>
                </div>
                <div class="col-lg-6 text-right">
                    <button type="submit" id="orderButton" class="btn btn-primary" name="order-button">{{ lang('cart.checkout') }}</button>
                </div>
            </div>

            <input type="hidden" name="{{ csrfname }}" value="{{ csrftoken }}">
        </form>
    </div>
</section>