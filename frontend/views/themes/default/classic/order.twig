<section class="min-height">
    <div class="container">
        <form id="addToCardForm" class="form" action="" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-title">{{ lang('order.title') }}</h1>
                </div>
            </div>
            <div class="row order">
                <div class="col-lg-6">
                    <div class="bg-white">
                        <div class="order-block">
                            <table class="table table-bordered">
                                <tr>
                                    <th class="col-lg-3">{{ lang('order.package') }}</th>
                                    <td>{{ package['name'] }}</td>
                                </tr>
                                <tr>
                                    <th class="col-lg-3">{{ lang('order.quantity') }}</th>
                                    <td>{{ package['quantity'] }}</td>
                                </tr>
                                <tr>
                                    <th class="col-lg-3">{{ lang('order.price') }}</th>
                                    <td>{{ package['price'] }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-white">
                        <div class="order-block">
                            {% if error %}
                                <div class="error-summary alert alert-danger">{{ errorMessage }}</div>
                            {% endif %}
                            <div class="form-group field-addtocartform-link required">
                                <label class="control-label" for="addtocartform-link">Link</label>
                                <input type="text" id="addtocartform-link" class="form-control" name="AddToCartForm[link]" aria-required="true" value="{{ data['link'] }}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <a class="btn btn-default" href="{{ goBackUrl }}">{{ lang('order.cancel') }}</a>
                </div>
                <div class="col-lg-6 text-right">
                    <button type="submit" id="addToCartButton" class="btn btn-primary" name="add-to-cart-button">{{ lang('order.submit') }}</button>
                </div>
            </div>
            <input type="hidden" name="{{ csrfname }}" value="{{ csrftoken }}">
        </form>
    </div>
</section>