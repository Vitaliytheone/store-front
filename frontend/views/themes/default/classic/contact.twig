<section class="min-height">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-title">Contact Us</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="contactUs-form">
                    <form action="" method="post">
                        {% if error %}
                            <div class="error-summary alert alert-danger">{{ errorText }}</div>
                        {% endif %}
                        {% if data.success %}
                            <div class="alert alert-success">{{ data.errorMessage }}</div>
                        {% endif %}
                        {% if data.error %}
                            <div class="alert alert-danger">{{ data.errorMessage }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="inputSubject">Subject</label>
                            <input type="text" class="form-control" id="inputSubject" name="subject" value="{{ data.subject }}">
                        </div>
                        <div class="form-group">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" name="name" value="{{ data.name }}">
                        </div>
                        <div class="form-group">
                            <label for="inputEmail">Email address</label>
                            <input type="email" class="form-control" id="inputEmail" name="email" value="{{ data.email }}">
                        </div>
                        <div class="form-group">
                            <label for="inputMessage">Message</label>
                            <textarea class="form-control" id="inputMessage" rows="3" name="message">{{ data.message }}</textarea>
                        </div>
                        <div class="form-group">
                            <div class="g-recaptcha" data-sitekey="{{ reCaptchaSiteKey }}"></div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Send message</button>
                        </div>
                        <input type="hidden" name="{{ csrfname }}" value="{{ csrftoken }}">
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contactUs-description">
                    <p>Our support team will try their best to answer your questions and help you. All e-mails are responded to within 24 hours.</p>
                </div>
            </div>
        </div>
    </div>
</section>