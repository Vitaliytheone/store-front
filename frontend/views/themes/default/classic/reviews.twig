{% if block['reviews'] %}
    <!-- Reviews block Start -->
    <section class="bg-gray-light border-bottom">
        <div class="container">
            <div class="row section-header">
                <div class="col-lg-12">
                    <h2 class="text-center">{{ reviews['title'] }}</h2>
                    {% if reviews['desciption'] %}
                        <div class="section-description">
                            {{ reviews['desciption'] }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="row section-content">
                <div class="col-lg-12">
                    <div class="swiper-container text-center">
                        <div class="swiper-wrapper">
                            {% for review in block['reviews'] %}
                                <div class="swiper-slide">
                                    <div class="review-avatar">
                                        <div class="review-image img-circle" style="background-image: url('{{ review['avatar'] }}');"></div>
                                    </div>
                                    <div class="review-author">{{ review['name'] }}</div>
                                    <div class="review-rating">
                                        {% for i in 0..review['rating'] %}
                                            <span class="fa fa-star"></span>
                                        {% endfor %}
                                    </div>
                                    <div class="review-text">
                                        {{ review['text'] }}
                                    </div>
                                </div>
														{% endfor %}
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endif %}