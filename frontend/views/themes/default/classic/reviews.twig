{% if block['review'] %}
<!-- Reviews block Start -->
    <section class="bg-gray-light border-bottom">
        <div class="container">
            <div class="row section-header">
                <div class="col-lg-12">
                    <h2 class="text-center">{{ block['review']['block']['header']['title'] }}</h2>
                    {% if block['review']['block']['header']['description'] %}
                        <div class="section-description">
                            {{ block['review']['block']['header']['description'] }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="row section-content">
                <div class="col-lg-12">
                    <div class="swiper-container text-center review-swiper-container">
                        <div class="swiper-wrapper">
                            {% for review in block['review']['data'] %}
                                <div class="swiper-slide">
                                    <div class="review-avatar">
                                        {% if review['image'] %}
                                            <div class="review-image img-circle" style="background-image: url('{{ review['image'] }}');"></div>
                                        {% else %}
                                            <div class="review-image img-circle" style="background-image: url('http://www.breps.be/frontend/core/layout/images/default_author_avatar.gif');"></div>
                                        {% endif %}
                                    </div>
                                    <div class="review-author">{{ review['name'] }}</div>
                                    <div class="review-rating">
                                        {% for i in 0..4 %}
																				    {% if i < review['rating'] %}
                                                <span class="fa fa-star"></span>
                                            {% else %}
                                                <span class="fa fa-star-o"></span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    {% if review['description'] %}
                                        <div class="review-text">
                                            {{ review['description'] }}
                                        </div>
                                    {% endif %}
                                </div>
														{% endfor %}
                        </div>
                        <div class="swiper-pagination swiper-pagination__review"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var reviewsSlider = new Swiper('.review-swiper-container', {
                pagination: '.review-swiper-container .swiper-pagination__review',
                paginationClickable: true,
                slidesPerView: {{ block['review']['settings']['column'] }}
            });
        });
    </script>
{% endif %}