<section class="min-height">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-title">{{ product['title'] }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    {{ product['text'] }}
                </div>
            </div>
        </div>
        <div class="row products">
            {% for package in product['packages'] %}
                <div class="col-lg-3">
                    <div class="product-card text-center {{ package['best'] }}">
                        <div class="product-quantity">{{ package['quantity'] }}</div>
                        <h3 class="product-title">{{ package['name'] }}</h3>
                        <div class="product-price">{{ package['price'] }}</div>
                        <div class="product-properties">
                            <ul>
                                {% for property in product['properties'] %}
                                    <li>{{ property }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="product-actions">
                            <a href="{{ package.addToCartUrl }}" class="btn btn-block btn-default">{{ lang('product.submit') }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>