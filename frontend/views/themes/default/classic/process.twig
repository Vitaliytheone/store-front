{% if block['process'] %}
    <!-- Process block Start -->
    <section>
        <div class="container">
            <div class="row section-header">
                <div class="col-lg-12">
                    <h2 class="text-center">{{ process['title'] }}</h2>
                    {% if process['description'] %}
                        <div class="section-description">
                            {{ process['description'] }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="row section-content">
                {% for process in block['process'] %}
                    <div class="col-lg-{{ process['column'] }}">
                        <div class="process">
                            <div class="process-body">
                                <div class="icon">
                                    <div class="process-icon text-center">
                                        <span class="fa {{ process['icon'] }}" style="font-size: {{ process['iconSize'] }}px;"></span>
                                    </div>
                                </div>
                                <div class="title">
                                    <h3 class="process-title">{{ process['title'] }}</h3>
                                </div>
                                {% if process['text'] %}
                                    <div class="description">
                                        <div class="process-text">
                                            {{  process['text'] }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Process block End -->
{% endif %}