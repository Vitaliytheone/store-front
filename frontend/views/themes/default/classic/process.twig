{% if block.process %}
    <!-- Process block Start -->
    <section>
        <div class="container">
            <div class="row section-header">
                <div class="col-lg-12">
                    <h2 class="text-center">{{ block.process.header.title }}</h2>
                    {% if block.process.header.description %}
                        <div class="section-description">
                            {{ block.process.header.description }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="row section-content">
                {% for process in block.process.data %}
                    <div class="col-lg-{{ block.process.settings.column }}">
                        <div class="process">
                            <div class="process-body">
                                <div class="icon">
                                    <div class="process-icon text-center">
                                        <span class="fa {{ process.icon }}" style="font-size: {{ block.process.settings.icon_size }}px;"></span>
                                    </div>
                                </div>
                                <div class="title">
                                    <h3 class="process-title">{{ process.title }}</h3>
                                </div>
                                {% if block.process.settings.description %}
                                    <div class="description">
                                        <div class="process-text">
                                            {{ process.description }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Process block End -->
{% endif %}