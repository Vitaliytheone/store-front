{% if block.features %}
    <!-- Features Section Start -->
    <div class="services--section pd--100-0">
        <div class="container">
        <!-- Section Title Start -->
        <div class="section--title mbottom--60">
            <h2 class="h2">{{ block.features.header.title }}</h2>
            {% if block.features.header.description %}
                <div class="section--description">
                    {{ block.features.header.description }}
                </div>
            {% endif %}
        </div>
        <!-- Section Title End -->

            <div class="row AdjustRow section-col__clearfix">
             {% for feature in block.features.data %}
                <div class="col-md-{{ block.features.settings.column }} col-xs-6 col-xxs-12">
                    <!-- Feature Item Start -->
                    <div class="service--item {% if block.features.settings.align == 'left' %} block-left {% endif %}">
                        <div class="icon">
                            <span class="fa {{ feature.icon }}" style="font-size: {{ block.features.settings.icon_size }}px;"></span>
                        </div>

                        <div class="title">
                            <h3 class="h4">{{ feature.title }}</h3>
                        </div>

                        <div class="content">
                            <p>{{ feature.description }}</p>
                        </div>
                    </div>
                    <!-- Feature Item End -->
                </div>
                {% endfor %}
                </div>

            </div>
            </div>
        <!-- Features Section End -->
{% endif %}