{% if block['features'] %}
<!-- Features Section Start -->
<div class="services--section pd--100-0">
    <div class="container">
        <!-- Section Title Start -->
        <div class="section--title mbottom--60">
            <h2 class="h2">{{ features['title'] }}</h2>
            {% if features['description'] %}
            <div class="section--description">
                {{ features['description'] }}
            </div>
            {% endif %}
        </div>
        <!-- Section Title End -->

        <div class="row AdjustRow">
            {% for feature in block['features'] %}
            <div class="col-md-{{ feature['column'] }} col-xs-6 col-xxs-12">
                <!-- Feature Item Start -->
                <div class="service--item {% if feature['align'] == 'left' %} block-left {% endif %}">
                    <div class="icon">
                        <span class="fa {{ feature['icon'] }}" style="font-size: {{ feature['iconSize'] }}px;"></span>
                    </div>

                    <div class="title">
                        <h3 class="h4">{{ feature['title'] }}</h3>
                    </div>

                    <div class="content">
                        <p>{{ feature['description'] }}</p>
                    </div>
                </div>
                <!-- Feature Item End -->
            </div>
            {% endif %}
        </div>

    </div>
</div>
<!-- Features Section End -->
{% endif %}