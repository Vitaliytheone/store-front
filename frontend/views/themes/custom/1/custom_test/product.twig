<section class="min-height">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-title">{{ product['name'] }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="content">
										{{ product['description'] }}
                </div>
            </div>
        </div>
        <div class="row products">
            <!--  Package items list -->
						{% for package in packages %}
                <!--  Package item  -->
                <div class="col-lg-3">
                    <div class="product-card text-center {{ package['best'] }}">
                        <div class="product-quantity">{{ package['quantity'] }}</div>
                        <h3 class="product-title">{{ package['name'] }}</h3>
                        <div class="product-price">{{ package['price'] }}</div>
                        <div class="product-properties">
                            <ul>
																{% for property in properties %}
                                    <li>{{ property }}</li>
																{% endfor %}
                            </ul>
                        </div>
                        <div class="product-actions">
                            <a href="/add-to-cart/{{ package['id'] }}" class="btn btn-block btn-default">Buy now</a>
                        </div>
                    </div>
                </div>
                <!--/ Package item  -->
						{% endfor %}
            <!--/ Package items list -->
        </div>
    </div>
</section>